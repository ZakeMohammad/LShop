
@model clsProduct;

<link href="~/css/productdetlisadmin.css" rel="stylesheet" />

<meta name="viewport" content="width=device-width, initial-scale=1.0">



<div class="slider" style="width: 100%; top:auto;">
    <div class="slide-track">
		<div class="slide">
			<img loading="lazy" src="@Model.ImageOne" height="100" width="250" alt="" />
		</div>
		<div class="slide">
			<img loading="lazy" src="@Model.ImageTwo" height="100" width="250" alt="" />
		</div>
		<div class="slide">
			<img loading="lazy" src="@Model.ImageThere" height="100" width="250" alt="" />
		</div>
		<div class="slide">
			<img loading="lazy" src="@Model.ImageFour" height="100" width="250" alt="" />
		</div>
		<div class="slide">
			<img loading="lazy" src="@Model.ImageFive" height="100" width="250" alt="" />
		</div>
    </div>
</div>




<div class="l-col-right ticket-wrap" aria-label="">
    <div class="ticket" aria-hidden="true">
        <div class="ticket__header">
            <div class="ticket__co">

                <span class="ticket__co-name">Product Detiles</span>
                <span class="u-upper ticket__co-subname"></span>
            </div>
        </div>
        <div class="ticket__body">
            <p class="ticket__route">@Model.Name</p>
            <p class="ticket__description">@Model.Description</p>
            <div class="ticket__timing">
                <p>
                    <span class="u-upper ticket__small-label">Price</span>
                    <span class="ticket__detail">@Model.Price</span>
                </p>
                <p>
                    <span class="u-upper ticket__small-label">Quantity</span>
                    <span class="ticket__detail">@Model.Quantity</span>
                </p>
                <p>
                    <span class="u-upper ticket__small-label">Rating</span>
                    <span class="ticket__detail">@Model.Rating / 5</span>
                </p>
            </div>

          
            <p class="ticket__fine-print"> <a asp-action="AddProductToTrandyOrJustArrived"  asp-controller="Product" asp-route-id="@Model.ID" asp-route-IsTrandy="true" style="text-decoration:none; color:darkgreen">Add to Trandy<i class="fa-solid fa-bullhorn" style="margin-left:10px"></i></a></p>
            <p class="ticket__fine-print"> <a asp-action="DeleteProductFromTrandyOrJustArrived" asp-controller="Product" asp-route-id="@Model.ID" asp-route-IsTrandy="true" style="text-decoration:none; color:darkred">Remove from Trandy<i class="fa-solid fa-bullhorn" style="margin-left:10px"></i></a></p>
            <p class="ticket__fine-print"> <a asp-action="AddProductToTrandyOrJustArrived" asp-controller="Product" asp-route-id="@Model.ID" asp-route-IsTrandy="false" style="text-decoration:none; color:darkgreen">Add to just arrived<i class="fa-solid fa-cart-flatbed-suitcase" style="margin-left:10px"></i></a></p>
            <p class="ticket__fine-print"> <a asp-action="DeleteProductFromTrandyOrJustArrived" asp-controller="Product" asp-route-id="@Model.ID" asp-route-IsTrandy="false" style="text-decoration:none; color:darkred;">Remove from just arrived<i class="fa-solid fa-cart-flatbed-suitcase" style="margin-left:10px"></i></a></p>


            <p class="ticket__fine-print"> <a asp-action="Create" asp-controller="Product" style="text-decoration:none; color:rgb(102, 102, 102);">Feel free to add new products ;)</a></p>
            <p class="u-upper ticket__admit"><a asp-action="IndexForAdmin" asp-controller="Product" style="text-decoration:none; color:rgb(102, 102, 102);">Return</a></p>

        </div>
    </div>
</div>


