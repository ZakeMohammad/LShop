@{
    ViewData["Title"] = "All Orders";
}


<div class="l-main">
    <div class="l-main-content l-main-content--full-height Grid Grid--gutters Grid--flexCells">
        <div class="Grid-cell">
            <div class="c-panel">
                <div class="c-panel__heading u-flex">
                    <div class="l-tool-group">
                        <a asp-action="Index" asp-controller="Admin" class="c-button c-button--primary c-button--panel-head" style="cursor:pointer; text-decoration:none;">Go Back</a>
                    </div>
                    <div class="l-tool-group u-grow u-justify-end">
                        <form class="l-search-group" asp-action="SerachBy" asp-controller="Order">
                            <input class="c-search" name="UserID" type="number" placeholder="Search by ID" />
                            <button type="submit" class="c-button c-button--panel-head c-button--search c-button--icon"><i class="material-icons">Search</i></button>
                        </form>
                    </div>
                </div>
                <div class="c-panel__body">
                    <div class="l-scroll-section js-sticky-head">
                        <table class="c-table">
                            <thead>
                                <tr>
                                    <th class="c-table__header c-table__header-cell--5">ID</th>
                                    <th class="c-table__header c-table__header-cell--20">UserID</th>
                                    <th class="c-table__header c-table__header-cell--8">Date</th>
                                    <th class="c-table__header c-table__header-cell--5">Ammount</th>
                                    <th class="c-table__header">Status</th>
                                    <th class="c-table__header c-table__header-cell--11">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                  
                                    foreach (var item in Model)
                                    {
                                        <tr class="c-table__row">
                                            <td class="c-table__cell">@item.ID</td>
                                            <td class="c-table__cell">@item.UserID</td>
                                            <td class="c-table__cell c-table-cell--letter-wrap">@item.OrderDate</td>
                                            <td class="c-table__cell">@item.TotalAmount</td> 
                                            @{
                                                if (item.Status == 1)
                                                {
                                                    <td class="c-table__cell">Painding</td>
                                                }
                                                if (item.Status == 2)
                                                {
                                                    <td class="c-table__cell">Active</td>
                                                }
                                                if (item.Status == 3)
                                                {
                                                    <td class="c-table__cell">Done</td>
                                                }
                                            }

                                            <td class="c-table__cell " style="font-size: 1rem;"><a asp-action="UserPaymentForThisOrder" asp-controller="Order" asp-route-OrderID="@item.ID"><i class="fa-solid fa-check" style="margin-left:10px"></i></a>   <a asp-action="ShowOrderItemsDeltislAdmin" asp-controller="Order" asp-route-id="@item.ID"><i class="fa-solid fa-circle-info" style="margin-left:10px;"></i></a>   <a asp-action="ConfirmThisAction" asp-controller="Order" asp-route-id="@item.ID"><i class="fa-solid fa-trash" style="margin-left:10px;"></i></a>  </td>
                                        </tr>
                                    }
                                    //<i class="fa-solid fa-check"></i>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

