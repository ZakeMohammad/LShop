<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>L-Shop</title>
 
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>

     <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>

  
    <div class="container-fluid">
        <div class="row bg-secondary py-2 px-xl-5">
            <div class="col-lg-6 d-none d-lg-block">
                <div class="d-inline-flex align-items-center">
                   
                    <a class="text-dark" asp-action="Contact" asp-controller="Home">Support</a>
                </div>
            </div>
            <div class="col-lg-6 text-center text-lg-right">
                <div class="d-inline-flex align-items-center">
                             
                </div>
            </div>
        </div> 
        <div class="row align-items-center py-3 px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a href="" class="text-decoration-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">L</span>Shop</h1>
                </a>
            </div>
            <div class="col-lg-6 col-6 text-left" style="visibility:hidden">
                <form action="">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for products">
                        <div class="input-group-append">
                            <span class="input-group-text bg-transparent text-primary">
                                <i class="fa fa-search"></i>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-3 col-6 text-right">
                <a asp-action="ShowFavorite" asp-controller="UserInteractions" class="btn border">
                    <i class="fas fa-heart text-primary"></i>
                    <span class="badge"></span>
                </a>
                <a asp-action="ShowMyCart" asp-controller="ShoppingCart" class="btn border">
                    <i class="fas fa-shopping-cart text-primary"></i>
                    <span class="badge"></span>
                </a>
            </div>
        </div>
    </div>
  
    <div class="container-fluid mb-5">
        <div class="row border-top px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a class="btn shadow-none d-flex align-items-center justify-content-between bg-primary text-white w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; margin-top: -1px; padding: 0 30px;">
                    <h6 class="m-0">Categories</h6>
                    <i class="fa fa-angle-down text-dark"></i>
                </a>
                <nav class="collapse  navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0" id="navbar-vertical">
                    <div class="navbar-nav w-100 overflow-hidden" style="height: 410px">
                        <a asp-controller="UserInteractions" asp-action="ShowAllProductForGategore" asp-route-id="1" class="nav-item nav-link">Accessories</a>
                        <a asp-controller="UserInteractions" asp-action="ShowAllProductForGategore" asp-route-id="2" class="nav-item nav-link">Cosmetics</a>
                        <a asp-controller="UserInteractions" asp-action="ShowAllProductForGategore" asp-route-id="3" class="nav-item nav-link">Clothes</a>
                        <a asp-controller="UserInteractions" asp-action="ShowAllProductForGategore" asp-route-id="4" class="nav-item nav-link">Shoes</a>
                    </div>
                </nav>
            </div>
            <div class="col-lg-9">
               
                <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">L</span>Shoop</h1>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a  asp-action="Index" asp-controller="Home" class="nav-item nav-link active">Home</a>
                            <a asp-action="Index" asp-controller="CheakOut" class="nav-item nav-link">My Orders</a>
                            <a asp-action="Contact" asp-controller="Home" class="nav-item nav-link">Contact</a>
                        </div>
                        <div class="navbar-nav ml-auto py-0">
                            @{
                                if (ApplicationUser.CurrentUser != null)
                                {
                                    <a asp-action="Detlis" asp-controller="User" asp-route-id="@ApplicationUser.CurrentUser.ID" class="nav-item nav-link">Hello! @ApplicationUser.CurrentUser.Name</a>
                                    <a asp-action="LogOut" asp-controller="LoginAndRegister" class="nav-item nav-link">Logout</a>
                                }
                                else
                                {
                                    <a asp-action="Login" asp-controller="LoginAndRegister"  class="nav-item nav-link">Login</a>
                                    <a asp-action="Login" asp-controller="LoginAndRegister" class="nav-item nav-link">Register</a>
                                }
                            }
                            
                        </div>
                    </div>
                </nav>
            </div>
        </div>
     </div>
   

     <main role="main" class="pb-3">
            @RenderBody()
        </main>

  
    <div class="container-fluid bg-secondary text-dark mt-5 pt-5 text-center" style="display:flex; justify-content:center; align-items:center;">
        <p class="mb-md-0 text-center text-md-left text-dark" style=" transform: translateY(-14px);">
            &copy; <a class="text-dark font-weight-semi-bold" href="#">L Shop</a>. All Rights Reserved.
        </p>
    </div>
  
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


   
      <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script> 
     <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>  


   
    <script src="~/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/mail/contact.js"></script>

   
    <script src="~/js/main.js"></script>
  
    @await RenderSectionAsync("Scripts", required: false)



</body>
</html>
